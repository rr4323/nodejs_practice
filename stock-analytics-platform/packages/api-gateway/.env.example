# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=stock-analytics-api
JWT_AUDIENCE=stock-analytics-client

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400 # 24 hours in seconds

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=api-gateway
KAFKA_GROUP_ID=api-gateway-group

# Logging
LOG_LEVEL=info
